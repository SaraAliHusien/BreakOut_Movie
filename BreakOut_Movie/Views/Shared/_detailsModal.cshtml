@model HomeIndexVM
<div class="modal fade bd-example-modal-lg Detailsmodal" id="Detailsmodal_@Model.MovieNoRate.Id" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header" >
                <h3 class="modal-title" id="exampleModalLongTitle">@Model.MovieNoRate.Title</h3>
                <button type="button" class="modal-close" onclick="CloseDetailsModal(@Model.MovieNoRate.Id)">
                    <h4> <i class="bi bi-x"></i></h4>
                </button>
            </div>
            <div class="modal-body" >
                <div class="row justify-content-between align-item-center mt-40-px">
                    <div class="col-4">
                        <img src="data:image/*;base64 ,@(Convert.ToBase64String(Model.MovieNoRate.Poster!))" class=" img-thumbnail" alt="@Model.MovieNoRate.Title" />

                    </div>
                    <div class="col-8 ">
                        <p></p>
                        <p class="text-justify "> <b>Production in:</b> @Model.MovieNoRate.Year</p>
                        <p >
                            <b>Rate  :</b>
                            <span>

                                @for(int i=1; i <= Model.TotalRate; i++)
                                {
                                    <i class="bi bi-star-fill text-warning"></i>
                                }
                               
                            </span>
                        </p>
                        <p class="text-justify "> <b>Genre :</b> @(Model.MovieNoRate.Genre.Name == default ? "No genre" : Model.MovieNoRate.Genre.Name)</p>
                        <p class="text-justify "> <b>Cast :</b> @Model.MovieNoRate.Cast</p>

                        <p class="text-justify "> <b>Story Line :</b> @Model.MovieNoRate.StoryLine</p>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

