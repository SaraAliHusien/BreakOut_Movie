@model RoleViewModel

<div class="d-flex justify-content-end  ">
    <a href="javaScript:;" class="close-icon">
        <h5 style="color:#445754">  <i class="bi bi-x-square"></i> </h5>
    </a>
</div>
<div class="headers mb-2 col-11 d-flex justify-content-center align-content-center" >
    <h2>
        Add Role
    </h2>
</div>
<div>
<form class="row g-3 form-body" method="POST" asp-action="AddRole" enctype="multipart/form-data">

    <div class="form-group col-11">
        <label asp-for="RoleName"></label>
        <input type="text" class="form-control" asp-for="RoleName" maxlength="250" placeholder="Name" />

        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

        <div class="p-1 col-11 d-flex justify-content-center ">
            <button type="submit" class="btn btn-primary" style="padding:6px 28px">
                <i class="bi bi-check-lg"></i>
                save
            </button>
        </div>


</form>
        </div>









